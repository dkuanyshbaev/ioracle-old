                                    {% if pin == 1 %}
                                        <option selected value={{pin}}>{{pin}}</option>
                                    {% else %}
                                        <option value={{pin}}>{{pin}}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </td>
                        <td class="align-middle">
                            <input type="checkbox" onclick="on_off(this, 1)" id="on_off_box">
                        <td>
